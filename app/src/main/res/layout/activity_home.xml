<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

   >
    <android.support.v7.widget.Toolbar
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:elevation="@dimen/small_marg"
        android:background="@color/colorPrimary">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:text="@string/app_name"
                />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>



    <Button
        android:layout_above="@+id/btn_screen_search"
        android:id="@+id/btn_screen_all"
        android:text="@string/my_books"
        android:layout_centerHorizontal="true"
      style="@style/home_button_style"/>

    <Button
        android:id="@+id/btn_screen_search"
        style="@style/home_button_style"
        android:layout_centerInParent="true"
        android:text="@string/search_book"
  />

    <Button
        android:layout_below="@+id/btn_screen_search"
        android:id="@+id/btn_screen_add"
        style="@style/home_button_style"
        android:layout_centerHorizontal="true"
        android:text="@string/add_book"

        />
</RelativeLayout>
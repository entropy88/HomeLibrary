<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >



    <Button
        android:layout_above="@+id/btn_screen_search"
        android:id="@+id/btn_screen_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show me all books"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/btn_screen_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
          android:text="search for books"/>

    <Button
        android:layout_below="@+id/btn_screen_search"
        android:id="@+id/btn_screen_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="add a new book"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".AddBookAcivity">

    <android.support.v7.widget.Toolbar
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:elevation="@dimen/small_marg"
        android:background="@color/colorPrimary">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:layout_gravity="center_vertical"
                android:text="@string/add_book"
                android:textColor="@android:color/white"
                />
            <ImageButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="@dimen/small_marg"
                android:background="@color/colorPrimary"
                android:src="@mipmap/ic_local_library_white_24dp"
                android:id="@+id/img_btn_pop"/>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Име на автора"/>

    <EditText
        android:id="@+id/edt_author"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Заглавие"/>

    <EditText
        android:id="@+id/edt_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="16sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Година на издаване"/>

    <EditText
        android:id="@+id/edt_year"
        android:inputType="number"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="16sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Ключови думи"/>

    <EditText
        android:id="@+id/edt_keywords"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btn_addBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="добави книга"
        style="@style/button_style"/>
</LinearLayout>